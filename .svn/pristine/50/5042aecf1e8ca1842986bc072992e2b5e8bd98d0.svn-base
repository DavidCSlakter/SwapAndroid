<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorVividCyan"
    android:orientation="vertical">

    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ConnectSocialMediaActivity"
        android:visibility="visible"/>-->
    <RelativeLayout
        android:id="@+id/relativeLayoutWebView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/webViewLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></WebView>
    </RelativeLayout>
    <TextView
        android:id="@+id/textViewConnectSocialMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/connect_social_media"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/connect_social_media_margin_left"
        android:layout_marginRight="@dimen/connect_social_media_margin_right"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corner_layout">

        <ImageView
            android:id="@+id/imageViewSpotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/spotify_black" />

        <ImageView
            android:id="@+id/imageViewPinterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewSpotify"
            android:layout_toLeftOf="@+id/imageViewVimeo"
            android:src="@drawable/pinterest_black" />

        <ImageView
            android:id="@+id/imageViewVimeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewSpotify"
            android:layout_centerHorizontal="true"
            android:src="@drawable/vimeo_black" />

        <ImageView
            android:id="@+id/imageViewYoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewSpotify"
            android:layout_toRightOf="@+id/imageViewVimeo"
            android:src="@drawable/youtube_black" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewVimeo"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewInstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageViewVimeo"
                android:src="@drawable/instagram_black" />

            <ImageView
                android:id="@+id/imageViewRedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/redit_black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewSoundCloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_toLeftOf="@+id/imageViewVimeo"
            android:src="@drawable/soundcloud_black" />

        <ImageView
            android:id="@+id/imageViewGithub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_centerHorizontal="true"
            android:src="@drawable/github_black" />

        <ImageView
            android:id="@+id/twitter_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_marginBottom="40dp"
            android:layout_toRightOf="@+id/imageViewVimeo"
            android:background="@drawable/twitter_black" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_next_top"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</LinearLayout>